name: ðŸš€ Auto FTP Deploy to shoplenca 
on:
  push:
    branches:
      - main

jobs:
  ftp-deploy:
    name: Upload Entire Repo to /shoplenca
    runs-on: ubuntu-latest

    steps:
    - name: ðŸ“¦ Checkout repo
      uses: actions/checkout@v4

    - name: ðŸš€ Upload to FTP
      uses: SamKirkland/FTP-Deploy-Action@v4.3.4
      with:
        server: ${{ secrets.FTP_SERVER }}
        username: ${{ secrets.FTP_USER }}
        password: ${{ secrets.FTP_PASS }}
        server-dir: ./         # ðŸ‘ˆ this matches your hosting folder
        local-dir: ./                 # ðŸ‘ˆ upload entire repo